{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AssignmentPacket",
  "type": "object",
  "required": ["task_id", "assignment", "active_locks"],
  "properties": {
    "task_id": {"type": "string", "minLength": 1},
    "assignment": {
      "type": "object",
      "required": [
        "lock_scope",
        "forbidden_scope",
        "acceptance_criteria",
        "worklog_path",
        "timeout_seconds",
        "heartbeat_interval_seconds"
      ],
      "properties": {
        "lock_scope": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string", "minLength": 1}
        },
        "forbidden_scope": {
          "type": "array",
          "items": {"type": "string", "minLength": 1}
        },
        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string", "minLength": 1}
        },
        "worklog_path": {"type": "string", "minLength": 1},
        "timeout_seconds": {"type": "integer", "minimum": 30},
        "heartbeat_interval_seconds": {"type": "integer", "minimum": 5}
      },
      "additionalProperties": true
    },
    "active_locks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task_id", "resource", "active"],
        "properties": {
          "task_id": {"type": "string", "minLength": 1},
          "resource": {"type": "string", "minLength": 1},
          "active": {"type": "boolean"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
